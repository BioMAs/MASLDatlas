# Production Environment Configuration for MASLDatlas
# Copy this file to .env and customize for your deployment

# Domain Configuration
MASLDATLAS_DOMAIN=masldatlas.yourdomain.com

# Application Configuration
SHINY_HOST=0.0.0.0
SHINY_PORT=3838
R_LIBS_USER=/app/rlibs

# Locale Configuration
LANG=C.UTF-8
LC_ALL=C.UTF-8

# Resource Limits
MEMORY_LIMIT=4G
CPU_LIMIT=2.0
MEMORY_RESERVATION=2G
CPU_RESERVATION=1.0

# Security Configuration
# Set to true in production
READ_ONLY_FILESYSTEM=false
NO_NEW_PRIVILEGES=true

# Logging Configuration
LOG_DRIVER=json-file
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3

# Traefik Configuration
TRAEFIK_NETWORK=traefik-network
CERT_RESOLVER=letsencrypt

# Rate Limiting
RATE_LIMIT_AVERAGE=100
RATE_LIMIT_BURST=200
RATE_LIMIT_PERIOD=1m

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60s

# Volume Configuration
DATASETS_PATH=./datasets
ENRICHMENT_SETS_PATH=./enrichment_sets
CONFIG_PATH=./datasets_config.json
CACHE_VOLUME=masldatlas_cache
LOGS_VOLUME=masldatlas_logs

# Backup Configuration (for future use)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration (for future use)
MONITORING_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
